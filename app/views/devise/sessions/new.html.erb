<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email,class: 'form-control form-control-lg rounded-0',
        input_html: { autocomplete: "new-password" }
        %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password ,class: 'form-control form-control-lg rounded-0',
        input_html: { autocomplete: "current-password", class: "equal-size-input" } %>
      </div>
    </div>
  </div>
  <br>
  <%= f.input :remember_me, as: :boolean, input_html: {  } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
  <div>
    <%= link_to "Back to Home", root_path ,class: "btn btn-primary btn-lg mt-3 mb-3 rounded-0" %>
  </div>
<% end %>
<%#= render "devise/shared/links" %>
