$(document).on('click', '#note_div', function(e) {
  e.preventDefault();
  var noteId = $(this).data('note-id');
  var newContent = $('#note-content').val();
  $.ajax({
      type: 'PATCH',
      url: '/notes/' + noteId,
      method: 'GET',
      data: { note: { content: newContent }},
      success: function(data) {
        if (data.success) {
        $('#card-' + noteID).text(data.content);
        $('#card-' + noteID).text(data.title);
      }
        $('#mynote').html("<%= j render 'form', note: @note %>");
        $('#form').modal('hide');
      },
  });
});
